<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">AD Name:</label>

        <%= f.text_field(:name) %>

</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Type:</label>
    
        <%= f.select :type_id, options_for_select(Type.all.map{|s|[s.name, s.id]}) %>
    
</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Format:</label>
    
        <%= f.select :format_id, options_for_select(Format.all.map{|s|[s.size, s.id]}) %>
    
</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Duration:</label>
        <%= f.select :duration_id, options_for_select(Duration.all.map{|s|[s.month, s.id]}) %>
</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Grade:</label>
        <%= f.select :grade_id, options_for_select(Grade.all.map{|s|[s.name, s.id]}) %>
</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">District:</label>
        <%= f.select :district_id, options_for_select(District.all.map{|s|[s.name, s.id]}) %>
</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Address:</label>

        <%= f.text_field(:address) %>

</div>

 <div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Start Date:</label>
        <%= f.datetime_select(:startdate) %>
</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">End Date:</label>

        <%= f.datetime_select(:enddate) %>

</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Base Amount:</label>

        <%= f.text_field(:baseamount) %>

</div>

<div class="form-group">
    <label class="col-sm-2 col-sm-2 control-label">Desc:</label>

        <%= f.text_area(:desc, size: "40x20") %>

</div>
